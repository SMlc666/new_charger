name: build

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    - name: 配置软件环境
      run: |
        sudo apt-get install -y aptitude
        sudo aptitude update
        curl -fsSL https://xmake.io/shget.text | bash
        source ~/.xmake/profile
        sudo aptitude install -y clang build-essential git gcc make cmake llvm
        sudo aptitude upgrade -y
    - uses: nttld/setup-ndk@v1
      with:
        ndk-version: r27
    - name: 编译软件
      run: |
        xmake f -a arm64-v8a -m release -p android-21 --ndk
        xmake